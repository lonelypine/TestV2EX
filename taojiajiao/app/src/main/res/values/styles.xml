<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--首页的布局风格-->
    <style name="style1">
        <item name="android:background">#f70</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_right_to_left</item>
        <item name="android:activityOpenExitAnimation">@anim/out_right_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_left_to_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_left_to_right</item>
    </style>
    <style name="mySpinnerStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ff00ff00</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>
    <style name="MyTheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transment</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="MyTheme.LoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="MyTheme.ReSendDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transment</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type">normal</item>
    </style>
    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="type">normal</item>
    </style>
    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="type">small</item>
    </style>
    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="type">small</item>
    </style>
    <style name="myTransparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@color/translution</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Theme.SmoothProgressBarDefaults" parent="@android:style/Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>
    <style name="SmoothProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_speed">@string/spb_default_speed</item>
    </style>
    <style name="addressListNameStyle">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="addressListAddressStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ff666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#80ffffff</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="Theme_Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="PopupWindowAnim">
        <item name="android:windowEnterAnimation">@anim/anim_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_exit</item>
    </style>
</resources>